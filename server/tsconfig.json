{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "..",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "../shared/types"
    ],
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "src/routes/**/*",
    "src/models/**/*",
    "../shared/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
} 